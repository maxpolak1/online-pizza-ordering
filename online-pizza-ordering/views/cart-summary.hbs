<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="javascripts/dom.js"></script>
</head>

<body>
    <h1>Menu</h1>
    <header class="header">
        <section class="flex">
            <a href="#home" class="logo">PIZZA</a>
            <nav class="navbar">
                <a href="#home">HOME</a>
                <a href="#about">ABOUT</a>
                <a href="/index">MENU</a>
                <a href="#order">ORDER</a>
                <a href="#faq">FAQ</a>
            </nav>

            <div class="icons">
                <div id="menu-btn" class="fas fa-bars"></div>
                <div id="order-btn" class="fas fa-box"></div>
                <a href="/cart-summary">
                    <div id="cart-btn" class="fas fa-shopping-cart"></div>
                    <div id="cartsize" class="fas">{{cartCount}}</div>
                </a><span></span>
            </div>
        </section>
    </header>

    <br><br><br>

    <div class="container">
        <br><br>
        <h1>Your Shopping Cart</h1>
        <br>
        <h2>Your Pizza</h2>

        <button onclick="deleteCartBtn(event)">Delete Entire Cart</button>

        {{#if cart.length}}
            <table class="table table-striped table-hover table-bordered" id = "tableCart">
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Customizations</th>
                    <th>Action</th>
                </tr>

                {{#each cart}}
                    <tr>
                        <td>{{productName.name}}</td>
                        <td>
                            <input type="number" min="1" value="{{quantity}}" class="quantityInput" data-index="{{@index}}">
                        </td>
                        <td>
                            {{#if customizations}}
                                {{customizations.name}}<br>
                            {{else}}
                                No customizations
                            {{/if}}
                        </td>
                        <td>
                            <button data-index="{{@index}}" onclick="updateCartItem(event)">Update</button>
                            <button data-index="{{@index}}" onclick="deleteCartButton(event)">Delete</button>
                        </td>
                    </tr>
                {{/each}}
            </table>
        {{else}}
            <p>Your cart is empty.</p>
        {{/if}}
        <br>
        <button onclick="submitOrderBtn(event)">Submit Order</button>
        <br>
        <br>
        <a href="/index"><button>Go Back to the Menu</button></a>
    </div>
    
</body>
</html>
